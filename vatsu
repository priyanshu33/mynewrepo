#include<stdio.h>
int main()
{
	int a,b,r,m; 
	char op;
	printf("Enter 2 numbers and oprator:\n");
	scanf("%d %d %c",&a,&b,&op);
	//printf("Enter an oprator:\n");
	//scanf("%c",&op);
	switch(op)
	{
	case '+':
	r=a+b;
	break;
	case '-':
	r=a-b;
	break;
	case '*':
	r=a*b;
	break;
	case '/':
	r=a/b;
	break;
	default:
	printf("-------- !! ENTER VALID OPRATOR !! ---------\n");
	break;
	}
	printf("Your ans is = %d \n",r);
}
